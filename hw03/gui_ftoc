import tkinter as tk
from tkinter import simpledialog, messagebox

def f2c(temp_f: float) -> float:
    return (temp_f - 32) * 5 / 9

def main():
    window = tk.Tk()
    window.withdraw()

    temp_f = simpledialog.askfloat("화씨온도를 섭씨온도로 변환하는 프로그램", "화씨 온도를 입력해주세요:")

    if temp_f is not None:
        temp_c = f2c(temp_f)
        
        messagebox.showinfo("결과", f"화씨 {temp_f:.2f}도는 섭씨 {temp_c:.2f}도 입니다.")

if __name__ == "__main__":
    main()
