import tkinter as tk
from tkinter import simpledialog, messagebox

def factorial(n: int) -> int:
    if n == 0:
        return 1
    else:
        return n * factorial(n - 1)

def main():
    window = tk.Tk()
    window.withdraw()

    n = simpledialog.askinteger("팩토리얼을 구하는 프로그램", "숫자를 입력하시오:")

    if n is not None:
        if n >= 0:
            result = factorial(n)
            messagebox.showinfo("결과", f"{n}의 팩토리얼은 {result}입니다.")

if __name__ == "__main__":
    main()
