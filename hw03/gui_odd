import tkinter as tk
from tkinter import simpledialog, messagebox

def is_even(n: int) -> bool:
    return n % 2 == 0

def main():
    window = tk.Tk()
    window.withdraw()

    n = simpledialog.askinteger("짝수 홀수를 판별하는 프로그램", "숫자를 입력하시오:")

    if n is not None:
        if is_even(n):
            messagebox.showinfo("결과", f"{n}은 짝수입니다.")
        else:
            messagebox.showinfo("결과", f"{n}은 홀수입니다.")

if __name__ == "__main__":
    main()
