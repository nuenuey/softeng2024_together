import tkinter as tk
from tkinter import messagebox

def is_even(n: int) -> bool:
    return n % 2 == 0

def calculate_even_sum():
    total = 0
    for i in range(1, 101):
        if is_even(i):
            total += i
    return total

def main():
    window = tk.Tk()
    window.withdraw()

    total = calculate_even_sum()

    messagebox.showinfo("1부터 100까지의 짝수 합을 구하는 프로그램", f"1부터 100까지의 짝수 합은 {total}입니다.")

if __name__ == "__main__":
    main()
